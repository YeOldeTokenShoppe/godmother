{
  "name": "@coinbase/waas-sdk-web-react",
  "version": "3.2.2",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Coinbase Inc.",
  "license": "ISC",
  "scripts": {
    "lint": "eslint -c .eslintrc.cjs src/**/*.tsx",
    "lint-fix": "eslint -c .eslintrc.cjs src/**/*.tsx --fix",
    "format": "prettier -c ../../.prettierrc --write \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "format-check": "prettier -c ../../.prettierrc --check \"**/*.{ts,tsx,js,cjs,json,md}\"",
    "test": "tsc && NODE_OPTIONS=--experimental-vm-modules vitest --config=./vitest.config.ts",
    "test-coverage": "tsc && NODE_OPTIONS=--experimental-vm-modules vitest --config=./vitest.config.ts run --coverage",
    "test-debug": "tsc && NODE_OPTIONS=--experimental-vm-modules vitest --config=./vitest.config.ts --inspect-brk --no-file-parallelism",
    "check": "tsc --noEmit",
    "prepack": "tsc",
    "prepublishOnly": "tsc"
  },
  "devDependencies": {
    "@bugsnag/js": "^7.22.4",
    "@testing-library/react": "^14.0.0-alpha.3",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.47",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "@coinbase/waas-sdk-web": "^3.2.1",
    "@types/react": "^18.2.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./config/jest/cryptoPolyfill.cjs",
      "./config/jest/textEncoderPolyfill.cjs"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)(\\.js)$": "$1"
    },
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__tests__"
    ],
    "collectCoverage": true,
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testRegex": ".test.tsx$"
  }
}
